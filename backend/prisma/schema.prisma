generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum SkillRole {
  TEACHING
  LEARNING
  HABIT
}

enum SwipeType {
  LIKE
  DISLIKE
}

// Models
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  bio       String?
  location  String?
  isGlobal  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  skills           UserSkill[]
  swipesSent       Swipe[]     @relation("swipesFromUser")
  swipesReceived   Swipe[]     @relation("swipesToUser")
  matchesInitiated Match[]     @relation("initiatorUser")
  matchesReceived  Match[]     @relation("targetUser")

  @@map("users")
}

model Skill {
  id       String   @id @default(cuid())
  name     String   @unique
  category String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  users UserSkill[]

  @@map("skills")
}

model UserSkill {
  id        String    @id @default(cuid())
  userId    String
  skillId   String
  role      SkillRole
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  skill Skill @relation(fields: [skillId], references: [id], onDelete: Cascade)

  // Unique constraint: user can have a skill only once
  @@unique([userId, skillId])
  @@map("user_skills")
}

model Swipe {
  id         String    @id @default(cuid())
  senderId   String
  receiverId String
  type       SwipeType
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  // Relations
  sender   User @relation("swipesFromUser", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User @relation("swipesToUser", fields: [receiverId], references: [id], onDelete: Cascade)

  // Unique constraint: can swipe only once on each user
  @@unique([senderId, receiverId])
  @@map("swipes")
}

model Match {
  id            String   @id @default(cuid())
  initiatorId   String
  targetId      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  initiator User @relation("initiatorUser", fields: [initiatorId], references: [id], onDelete: Cascade)
  target    User @relation("targetUser", fields: [targetId], references: [id], onDelete: Cascade)

  // Unique constraint: a match between two users happens once
  @@unique([initiatorId, targetId])
  @@map("matches")
}
